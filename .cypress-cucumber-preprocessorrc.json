{
  "stepDefinitions": [
    "cypress/e2e/features/**/[filepath].stepdef.js",
    "cypress/e2e/common/**/*.js"
  ],
  "html": {
    "enabled": true,
    "output": "cypress/reports/html/cucumber-report.html"
  },
  "messages": {
    "enabled": true,
    "output": "cypress/reports/messages/cucumber-messages.ndjson"
  },
  "json": {
    "enabled": true,
    "output": "cypress/reports/json/cucumber-report.json"
  },
  "filterSpecs": true,
  "omitFiltered": true
}