{
  "name": "cypress-cucumber-e2e-tests",
  "version": "1.0.0",
  "description": "Cypress Cucumber E2E Test Framework",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "npm run clean:results && npm run clean:docker && npm run clean:modules",
    "clean:modules": "rimraf ./node_modules",
    "clean:results": "rimraf ./cypress/reports ./cypress/videos ./cypress/screenshots ./cypress/downloads",
    "clean:docker": "rimraf ./.docker",
    "cy:open:prod": "npx cypress open --env ENV=prod",
    "cy:open:local": "npx cypress open --env ENV=local",
    "cy:run:prod": "npx cypress open --env ENV=prod",
    "cy:run:local": "npx cypress open --env ENV=local",
    "cy2:run": "CYPRESS_API_URL='http://localhost:1234' cy2 run --config projectId='cypress-cucumber' --record --key xxx --parallel --ci-build-id `date +%Y-%m-%d`",
    "cy2:run:gha": "CYPRESS_API_URL=${CYPRESS_DIRECTOR_URL} cy2 run --config projectId='cypress-cucumber' --record --key ${CYPRESS_RECORD_KEY} --parallel --ci-build-id ${CYPRESS_CI_BUILD_ID}"
  },
  "keywords": [
    "Cypress",
    "JS",
    "JavaScript",
    "Cucumber",
    "Gherkin"
  ],
  "author": "Levi9",
  "license": "ISC",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^16.0.1",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@cypress/xpath": "^2.0.3",
    "@faker-js/faker": "^7.6.0",
    "cy2": "^4.0.6",
    "cypress": "^12.9.0",
    "cypress-split": "^1.3.3",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-cypress": "^2.13.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7"
  }
}
